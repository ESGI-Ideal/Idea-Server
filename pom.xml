    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>

        <!-- // generate DB binding // -->
        <plugins>
            <plugin>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-maven-plugin</artifactId>
                <version>${liquibase.version}</version>
                <configuration>
                    <!--<propertyFileWillOverride>true</propertyFileWillOverride>-->
                    <!--<propertyFile>liquibase/liquibase.properties</propertyFile><!- -src/main/resources/-->
                    <changeLogFile>liquibase/db-changelog.xml</changeLogFile>
                    <!--<changeLogFile>src/main/resources/org/liquibase/business_table.xml</changeLogFile>
                    <driver>oracle.jdbc.driver.OracleDriver</driver>
                    <url>jdbc:oracle:thin:@tf-appserv-linux:1521:xe</url>
                    <username>liquibaseTest</username>
                    <password>pass</password>-->
                    <promptOnNonLocalDatabase>true</promptOnNonLocalDatabase>
                </configuration>
                <executions>
                    <execution>
                        <id>db_bind_gen</id>
                        <!--<phase>process-resources</phase>-->
                        <goals><goal>update</goal></goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <driver>org.hsqldb.jdbc.JDBCDriver</driver>
                            <url>${db-jdbc-url}</url>
                            <username>sa</username>
                            <password></password>
                            <changeLogFile>${project.basedir}/src/main/resources/liquibase/db-changelog.xml</changeLogFile>
                            <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
                        </configuration>
                    </execution>
                    <execution>
                        <id>db_verify</id>
                        <phase>verify</phase>
                        <goals><goal>status</goal></goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.hsqldb</groupId>
                        <artifactId>hsqldb</artifactId>
                        <version>${hsqldb.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.jooq</groupId>
                <artifactId>jooq-codegen-maven</artifactId>
                <version>3.11.2</version>
                <executions>
                    <execution>
                        <id>db_bind_build</id>
                        <goals><goal>generate</goal></goals>
                        <!--<phase>generate-sources</phase>-->
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.hsqldb</groupId>
                        <artifactId>hsqldb</artifactId>
                        <version>${hsqldb.version}</version>
                    </dependency>
                </dependencies>
                <configuration><!--view-source:http://www.jooq.org/xsd/jooq-codegen-3.11.0.xsd-->
                    <jdbc>
                        <driver>org.hsqldb.jdbc.JDBCDriver</driver>
                        <url>${db-jdbc-url}</url>
                        <user>sa</user>
                        <password></password>
                        <properties>
                            <!--<property><key></key><value></value></property>-->
                        </properties>
                    </jdbc>
                    <generator>
                        <name>org.jooq.codegen.JavaGenerator</name>
                        <database>
                            <name>org.jooq.meta.hsqldb.HSQLDBDatabase</name>
                            <!--<name>org.jooq.meta.postgres.PostgresDatabase</name>
                            <name>org.jooq.meta.xml.XMLDatabase</name>
                            <name>org.jooq.meta.extensions.ddl.DDLDatabase</name>-->
                            <includes>.*</includes>
                            <excludes>PUBLIC\.DATABASECHANGELOG|PUBLIC\.DATABASECHANGELOGLOCK</excludes>
                            <!--<inputCatalog>public</inputCatalog> In case your database supports catalogs (e.g. SQL Server) -->
                            <inputSchema>PUBLIC</inputSchema>
                            <!--<schemata><schema><inputSchema>SCHEMA1</inputSchema></schema></schemata>-->
                            <logSlowQueriesAfterSeconds/>
                        </database>
                        <generate>
                            <javadoc>true</javadoc>
                            <comments>true</comments>
                            <commentsOnAttributes>true</commentsOnAttributes>
                            <commentsOnCatalogs>true</commentsOnCatalogs>
                            <commentsOnColumns>true</commentsOnColumns>
                            <commentsOnKeys>true</commentsOnKeys>
                            <commentsOnLinks>true</commentsOnLinks>
                            <commentsOnPackages>true</commentsOnPackages>
                            <commentsOnParameters>true</commentsOnParameters>
                            <commentsOnQueues>true</commentsOnQueues>
                            <commentsOnRoutines>true</commentsOnRoutines>
                            <commentsOnSchemas>true</commentsOnSchemas>
                            <commentsOnSequences>true</commentsOnSequences>
                            <commentsOnTables>true</commentsOnTables>
                            <commentsOnUDTs>true</commentsOnUDTs>
                            <daos>true</daos>
                            <deprecated>false</deprecated>
                            <deprecationOnUnknownTypes>true</deprecationOnUnknownTypes>
                            <generatedAnnotation>true</generatedAnnotation>
                            <javaBeansGettersAndSetters>true</javaBeansGettersAndSetters>
                            <validationAnnotations>true</validationAnnotations>
                            <javaTimeTypes>true</javaTimeTypes>
                            <pojos>true</pojos>
                            <pojosEqualsAndHashCode>true</pojosEqualsAndHashCode>
                            <pojosToString>true</pojosToString>
                            <serializablePojos>true</serializablePojos>
                            <immutablePojos>true</immutablePojos>
                            <fluentSetters>true</fluentSetters>
                            <varargSetters>false</varargSetters>
                            <interfaces>true</interfaces>
                            <immutableInterfaces>true</immutableInterfaces>
                            <serializableInterfaces>true</serializableInterfaces>
                            <emptyCatalogs>false</emptyCatalogs>
                            <emptySchemas>false</emptySchemas>
                            <globalSchemaReferences>false</globalSchemaReferences>
                        </generate>
                        <target>
                            <packageName>fr.pixel.dao</packageName>
                            <directory>${project.build.directory}/generated-sources/jooq</directory>
                            <clean>true</clean>
                            <encoding>${project.build.sourceEncoding}</encoding>
                        </target>
                    </generator>
                    <!--<configurationFile>${project.basedir}/src/main/resources/jooq-codegen-conf.xml</configurationFile>-->
                    <logging>INFO</logging>
                </configuration>
            </plugin>

            <!-- // include other resources in Jar // -->
            <!--<plugin> TODO: semble obsol√®te avec maven
                <groupId>net.tomred</groupId>
                <artifactId>liquibase-validator-maven-plugin</artifactId>
                <version>1.7.0</version>
                <configuration>
                    <dir>${project.build.sourceDirectory}/../resources/liquibase</dir>
                    <!- -<ignore>
                        <param>target\</param>
