            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <descriptors>
                        <descriptor>src/assembly/liquibase_assembly.xml</descriptor>
                    </descriptors>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <!-- // Build & Executable Jar // -->
            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>vertx-maven-plugin</artifactId>
                <version>1.0.13</version>
                <executions>
                    <execution>
                        <id>vmp</id>
                        <goals>
                            <goal>initialize</goal>
                            <goal>package</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <redeploy>false</redeploy>
                    <redeployScanPeriod>4000</redeployScanPeriod>
                    <redeployGracePeriod>10000</redeployGracePeriod>
                    <redeployTerminationPeriod>5500</redeployTerminationPeriod>
                    <!--<workDirectory></workDirectory>--><!--default: vertx.directory=${project.basedir}-->
                    <serviceProviderCombination>combine</serviceProviderCombination>
                    <attach>true</attach>
                    <!--<classifier>fat</classifier>-->
                    <skipScmMetadata>false</skipScmMetadata>
                    <debugPort>5005</debugPort>
                    <debugSuspend>true</debugSuspend>
                    <!--<jvmArgs>
                        <jvmArg>-Xms512m</jvmArg>
                        <jvmArg>-Xmx1024m</jvmArg>
                    </jvmArgs>-->
                    <!--<runArgs>
                        <!- -<runArg>list</runArg>- ->
                        <!- -<runArg>- -help</runArg>- ->
                        <!- -<runArg>-version</runArg>- ->
                    </runArgs>-->
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
